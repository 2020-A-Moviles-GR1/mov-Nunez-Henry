<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:backgroundTint="@android:color/holo_blue_bright"
    tools:context=".ListaPacientes">

    <ListView
        android:id="@+id/lv_lista_pokemones"
        android:layout_width="295dp"
        android:layout_height="242dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.119" />

    <Button
        android:id="@+id/btn_ir_entrena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/common_google_signin_btn_text_light_default"
        android:text="Doctores"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/lv_lista_pokemones"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toStartOf="@+id/lv_lista_pokemones"
        app:layout_constraintTop_toBottomOf="@+id/lv_lista_pokemones" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PACIENTES"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <Button
        android:id="@+id/btn_atras_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:backgroundTint="@color/common_google_signin_btn_text_light_default"
        android:text="Atras"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="@+id/btn_ir_entrena"
        app:layout_constraintStart_toEndOf="@+id/btn_ir_entrena"
        app:layout_constraintTop_toTopOf="@+id/btn_ir_entrena"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_a_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mapa"
        app:layout_constraintEnd_toEndOf="@+id/btn_atras_paciente"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_entrena"
        app:layout_constraintTop_toBottomOf="@+id/btn_atras_paciente" />
</androidx.constraintlayout.widget.ConstraintLayout>